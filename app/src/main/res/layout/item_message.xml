<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/message_nickname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/nickname"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorSpeaker"
        />

    <TextView
        android:layout_width="96sp"
        android:layout_height="wrap_content"
        android:id="@+id/message_sent_time"
        android:gravity="end"
        android:layout_alignTop="@id/message_nickname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/sent_time"
        android:textSize="20sp"
        android:textColor="@color/colorSentTime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/message_nickname"
        android:layout_alignLeft="@id/message_nickname"
        android:layout_alignStart="@id/message_nickname"
        android:layout_alignRight="@id/message_sent_time"
        android:layout_alignEnd="@id/message_sent_time"
        android:text="@string/content_example"
        android:textSize="18sp"
        android:textColor="@color/colorContent"
        />

</RelativeLayout>